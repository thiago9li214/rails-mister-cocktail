<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <%= link_to 'Back', cocktails_path %>
      
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> | <%= dose.ingredient.name %> |
            <%= link_to "Delete", dose_path(dose), method: :delete, class: 'btn btn-danger'  %></li>
        <% end %>
      </ul>


      <hr>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, collection: Ingredient.all %>
        <%= f.submit  %>  
      <% end %>
        
    </div>
  </div>
</div>
